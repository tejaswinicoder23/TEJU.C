#include <stdio.h>
int main() {
    char first[50],last[50],full[100];
    int i=0,j=0,len=0,maxlen=20;
    printf("enter the first name\n");
    scanf("%s",first);
     printf("enter the last name\n");
    scanf("%s",last);
    while((first[i])!='\0') {
        full[len]=first[i];
        i++;
        len++;
    }
    full[len]=' ';
    len++;
    while((last[j])!='\0'){
        full[len]=last[i];
        j++;
        len++;
    }
        full[len] = ' ';
         if(len<=maxlen){
             printf("full name:%s",full);
             printf("length of full name%d\n",len);
             printf("fits to the screen:");
             }
             else
             {
                  printf("full name:%s",full);
             printf("length of full name%d\n",len);
             printf(" does not fits to the screen:");
             }

    return 0;
}
