#include <stdio.h>
#include<string.h>
#define MAX 100 
int main()
{
 char descripition[MAX];
char keyword[100];
int len;
printf("enter the course descripition\n");
scanf("%s",descripition);
printf("Enter the keyword\n");
scanf("%s",keyword);
len=strlen(descripition);
if(strstr(descripition,keyword)){
printf("Keyword '%s' found in the '%s' course descripition",keyword,descripition);}

else{
printf("Keyword'%s'not found in the '%s' course descripition",keyword,descripition);
}
}
